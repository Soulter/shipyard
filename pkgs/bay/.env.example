# Bay API Configuration
# Copy this file to .env and modify as needed

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Ship management
MAX_SHIP_NUM=10
BEHAVIOR_AFTER_MAX_SHIP=wait

# Authentication
ACCESS_TOKEN=secret-token

# Database
DATABASE_URL=sqlite+aiosqlite:///./bay.db

# Docker
DOCKER_IMAGE=ship:latest
DOCKER_NETWORK=shipyard

# Ship defaults
DEFAULT_SHIP_TTL=3600
DEFAULT_SHIP_CPUS=1.0
DEFAULT_SHIP_MEMORY=512m
